# Backend environment example (DO NOT commit real secrets)

# Server
PORT=3000
NODE_ENV=development

# Mongo (Mongoose)
# Use ONE of these (preferred: MONGO_URI)
MONGO_URI=mongodb://localhost:27017/computec_backend
# MONGODB_URI=mongodb://localhost:27017/computec_backend

# JWT
# Required: used to sign/verify tokens
JWT_SECRET=change_me_in_production
# Optional: seconds
JWT_EXPIRES_IN=3600

# Postgres (TypeORM)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=
DB_NAME=computec_backend

# TypeORM
TYPEORM_SYNCHRONIZE=false
